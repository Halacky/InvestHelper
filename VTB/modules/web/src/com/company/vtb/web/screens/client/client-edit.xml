<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://clientEdit.caption"
        focusComponent="form"
        messagesPack="com.company.vtb.web.screens.client">
    <data>
        <instance id="clientDc"
                  class="com.company.vtb.entity.Client">
            <view extends="_local">
                <property name="user" view="_minimal">
                    <property name="firstName"/>
                    <property name="lastName"/>
                    <property name="middleName"/>
                </property>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="clientDc">
            <column width="350px">
                <pickerField id="userField" property="user">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="balanceField" property="balance"/>
                <textField id="completeCourseField" property="completeCourse"/>
                <textField id="levelFinanceField" property="levelFinance"/>
                <textField id="timeFirstSessionField" property="timeFirstSession"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
