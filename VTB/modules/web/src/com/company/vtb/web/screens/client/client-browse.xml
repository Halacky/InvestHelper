<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://clientBrowse.caption"
        focusComponent="clientsTable"
        messagesPack="com.company.vtb.web.screens.client">
    <data readOnly="true">
        <collection id="clientsDc"
                    class="com.company.vtb.entity.Client">
            <view extends="_local">
                <property name="user" view="_minimal">
                    <property name="firstName"/>
                    <property name="lastName"/>
                    <property name="middleName"/>
                </property>
            </view>
            <loader id="clientsDl">
                <query>
                    <![CDATA[select e from vtb_Client e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="clientsTable"
            spacing="true">
        <filter id="filter"
                applyTo="clientsTable"
                dataLoader="clientsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="clientsTable"
                    width="100%"
                    dataContainer="clientsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="user"/>
                <column id="balance"/>
                <column id="completeCourse"/>
                <column id="levelFinance"/>
                <column id="timeFirstSession"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="clientsTable.create"/>
                <button id="editBtn" action="clientsTable.edit"/>
                <button id="removeBtn" action="clientsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
